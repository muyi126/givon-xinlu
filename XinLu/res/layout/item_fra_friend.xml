<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.givon.baseproject.xinlu.view.RoundImageView
            android:id="@+id/rv_header"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_margin="15dip"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rv_header"
            android:layout_toRightOf="@+id/rv_header"
            android:text="李湘"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/rv_header"
            android:layout_marginRight="15dip"
            android:text="2014.10.10"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginRight="15dip"
            android:layout_toRightOf="@+id/rv_header"
            android:text="美丽的天空"
            android:textSize="18sp" />
    </RelativeLayout>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:paddingBottom="5dip"
    android:paddingTop="5dip"
    >
    <TextView 
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="京津冀经济就"
        android:layout_toLeftOf="@+id/tv_reple"
        android:layout_alignParentLeft="true"
        />
    <TextView 
        android:id="@+id/tv_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:layout_alignParentRight="true"
        />
    <TextView 
        android:id="@+id/tv_reple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26"
		android:layout_toLeftOf="@+id/tv_read"  
		android:layout_marginRight="15dip"      
        />
    
</RelativeLayout>
</LinearLayout>