<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id = "@+id/geometrytool"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
	         android:layout_width="50dp"
	         android:layout_height="25dp"  
	         android:layout_gravity="center"  
	         android:gravity="center"  
	         android:text="字体"     
	         />
        <HorizontalScrollView 
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_gravity="center"
	        android:scrollbars="none">
	        <LinearLayout
	            android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id = "@+id/graphiclist"
			    android:orientation="horizontal">
			    <TextView
			        android:id="@+id/text_type_1"
				    android:layout_width="wrap_content"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:text="宋体"
				    />
			    <TextView
			        android:id="@+id/text_type_2"
				    android:layout_width="wrap_content"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:text="宋体"
				    />
			    <TextView
			        android:id="@+id/text_type_3"
				    android:layout_width="wrap_content"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:text="宋体"
				    />
			    <TextView
			        android:id="@+id/text_type_4"
				    android:layout_width="wrap_content"
				    android:layout_height="30dp"
				    android:padding="5dp"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:text="宋体"
				    />
			   
	        </LinearLayout>
	    </HorizontalScrollView> 
    </LinearLayout> 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
	         android:layout_width="50dp"
	         android:layout_height="25dp"  
	         android:layout_gravity="center"   
	         android:text="颜色"   
	         android:gravity="center"   
	         />
        <ImageView
            android:id="@+id/graphiccolorview"
			android:layout_width="60dp"
			android:layout_height="20dp"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="10dp"
			android:layout_marginRight="5dp"
			android:layout_marginBottom="10dp"
			android:background="#ff000000"></ImageView>
         <Button
            android:id="@+id/graphiccolorbtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
            android:text="choose"></Button>
         <!-- <ImageView
	        android:layout_width="50dp"
	        android:layout_height="25dp"  
	        android:layout_gravity="center"   
	        android:layout_marginLeft="20dp"      
	        android:src="@drawable/graphictextstroke"/>
         <CheckBox
             android:id="@+id/strokckb"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:checked="true"></CheckBox> -->
    </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_content"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"  
	         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/graphicdrawbtn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:text="点击绘制"></Button>
        <Button
            android:id="@+id/graphicdrawbtn_now"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginRight="50dp"
            android:text="绘制当前"></Button>
    </LinearLayout>
 </LinearLayout>
