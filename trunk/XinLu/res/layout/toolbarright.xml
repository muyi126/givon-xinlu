<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawright"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_above="@+id/drawbottom"
    android:layout_alignParentRight="true"
    android:orientation="vertical" >
<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >
    <ImageButton
        android:id="@+id/to_photo_bt"
        android:layout_width="60px"
        android:layout_height="40px"
        android:background="@drawable/drawvisiblebtn" >
    </ImageButton>

    <ScrollView
        android:layout_below="@+id/to_photo_bt"
        android:layout_above="@+id/to_takephoto_bt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/ly_photos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/to_takephoto_bt"
        android:layout_width="60px"
        android:layout_height="40px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/drawvisiblebtn" />
    </RelativeLayout>

</LinearLayout>