<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login" >
   
	
	    
	
    <ImageView
        android:id="@+id/iv_fork_delete"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:padding="7dip"
        android:layout_margin="5dip"
        android:layout_alignParentRight="true" 
        android:src="@drawable/fork" />
		
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_fork_delete"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:src="@drawable/ic_launcher" />

    <include
        android:id="@+id/ic_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_margin="@dimen/activity_vertical_margin"
        layout="@layout/enter_including" />

    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ic_enter"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:text="忘记密码？"
        android:textColor="@color/font_white" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_forget"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/selecter_login"
        android:text="登录"
        android:onClick="doLogin"
        android:textColor="@color/font_blue" />

    <Button
        android:id="@+id/bt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_login"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_register"
        android:onClick="doRegist"
        android:text="注册"
        android:textColor="@color/font_white" />
	
